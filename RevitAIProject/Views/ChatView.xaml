<Page x:Class="RevitAIProject.Views.ChatView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:vm="clr-namespace:RevitAIProject.ViewModels" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:conv="clr-namespace:RevitAIProject.Converters"
      xmlns:local="clr-namespace:RevitAIProject.Views">

    <Page.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" />
            <conv:BooleanToVisibilityConverter x:Key="BoolToVis" />

            <!-- СТИЛЬ ДЛЯ КНОПОК-СМАЙЛИКОВ -->
            <Style x:Key="RatingButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="4,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Opacity" Value="0.85"/>
                <!-- Ожидание оценки (85%) -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>

                    <!-- Состояние: АИ работает (Серые, 20%) -->
                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Setter Property="Opacity" Value="0.2"/>
                    </DataTrigger>

                    <!-- Состояние: Оценка уже выставлена (100% яркость) -->
                    <!-- Для этого во ViewModel добавим свойство IsRated -->
                    <DataTrigger Binding="{Binding IsRated}" Value="True">
                        <Setter Property="Opacity" Value="1.0"/>
                        <Setter Property="IsEnabled" Value="False"/>
                        <!-- Чтобы нельзя было переголосовать -->
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid DataContext="{Binding ChatViewModel, Source={StaticResource Locator}}" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Row 0: История чата -->
            <RowDefinition Height="Auto" />
            <!-- Row 1: Панель рейтинга -->
            <RowDefinition Height="Auto" />
            <!-- Row 2: Поле ввода -->
        </Grid.RowDefinitions>

        <!-- ЧАТ (Grid.Row="0") -->
        <ScrollViewer Name="ChatScroll" Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel>
                <TextBox TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" FontSize="12" 
                         FontFamily="Consolas" Background="#F9F9F9" Padding="10" 
                         Text="{Binding ChatHistory, Mode=OneWay}" />
                <TextBlock Text="AI думает..." FontStyle="Italic" Foreground="#FF808080" 
                           Margin="10,5" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" />
            </StackPanel>
        </ScrollViewer>

        <!-- ПАНЕЛЬ РЕЙТИНГА (Grid.Row="1") -->
        <!-- Показывается только когда есть последний ответ для оценки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,2,20,2"
                    Visibility="{Binding IsRatingVisible, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Оцените точность решения:" VerticalAlignment="Center" Margin="0,0,10,0" 
                       FontSize="11" Foreground="#FFA0A0A0" FontStyle="Italic"/>

            <Button Command="{Binding RateCommand}" CommandParameter="-2" Content="😡" Style="{StaticResource RatingButtonStyle}" ToolTip="Ужасно (-80%)"/>
            <Button Command="{Binding RateCommand}" CommandParameter="-1" Content="🙁" Style="{StaticResource RatingButtonStyle}" ToolTip="Плохо (-60%)"/>
            <Button Command="{Binding RateCommand}" CommandParameter="0"  Content="😐" Style="{StaticResource RatingButtonStyle}" ToolTip="Обычно (Стандарт)"/>
            <Button Command="{Binding RateCommand}" CommandParameter="1"  Content="🙂" Style="{StaticResource RatingButtonStyle}" ToolTip="Отлично (60%)"/>
            <Button Command="{Binding RateCommand}" CommandParameter="2"  Content="🤩" Style="{StaticResource RatingButtonStyle}" ToolTip="Супер (80%)"/>
        </StackPanel>

        <!-- ПОЛЕ ВВОДА (Grid.Row="2") -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
                <!-- Кнопка микрофона -->
                <ColumnDefinition Width="80" />
                <!-- Кнопка Send -->
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputTextBox" Height="30" VerticalContentAlignment="Center" Padding="5,0" 
                     Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}" >
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SendCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <!-- Кнопка микрофона -->
            <Button Grid.Column="1" Content="🎤" Margin="5,0" FontSize="16"
                    Command="{Binding RecordVoiceCommand}"
                    BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                <Setter Property="Background" Value="#FF4444"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2" Content="Send" Background="#2196F3" 
                    Foreground="White" BorderThickness="0" 
                    Command="{Binding SendCommand}" />
        </Grid>
    </Grid>
</Page>